<Window x:Class="TourCompany.AddDiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавить скидку" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Выберите продажу"/>
            <ComboBox x:Name="SalesComboBox"/>

            <Label Content="Новая скидка"/>
            <TextBox x:Name="DiscountBox" materialDesign:HintAssist.Hint="Введите скидку"/>

            <Button Content="Обновить скидку" Click="UpdateDiscount_Click"/>
        </StackPanel>
    </Grid>
</Window>
