<Window x:Class="TourCompany.AddDiscountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить скидку" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <ComboBox x:Name="SalesComboBox"/>
            <TextBox x:Name="DiscountBox" PlaceholderText="Новая скидка"/>
            <Button Content="Обновить скидку" Click="UpdateDiscount_Click"/>
        </StackPanel>
    </Grid>
</Window>
