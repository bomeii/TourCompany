<Window x:Class="TourCompany.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавить клиента" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Фамилия"/>
            <TextBox x:Name="LastNameBox" materialDesign:HintAssist.Hint="Введите фамилию"/>

            <Label Content="Имя"/>
            <TextBox x:Name="FirstNameBox" materialDesign:HintAssist.Hint="Введите имя"/>

            <Label Content="Отчество"/>
            <TextBox x:Name="MiddleNameBox" materialDesign:HintAssist.Hint="Введите отчество"/>

            <Label Content="Адрес"/>
            <TextBox x:Name="AddressBox" materialDesign:HintAssist.Hint="Введите адрес"/>

            <Label Content="Телефон"/>
            <TextBox x:Name="PhoneBox" materialDesign:HintAssist.Hint="Введите телефон"/>

            <Button Content="Добавить клиента" Click="AddClient_Click"/>
        </StackPanel>
    </Grid>
</Window>
