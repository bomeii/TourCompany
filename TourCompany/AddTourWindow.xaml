<Window x:Class="TourCompany.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить путёвку" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="CountryBox" PlaceholderText="Страна"/>
            <TextBox x:Name="ClimateBox" PlaceholderText="Климат"/>
            <TextBox x:Name="HotelClassBox" PlaceholderText="Класс отеля"/>
            <TextBox x:Name="DurationBox" PlaceholderText="Длительность (дн.)"/>
            <TextBox x:Name="PriceBox" PlaceholderText="Цена"/>
            <Button Content="Добавить" Click="AddTour_Click"/>
        </StackPanel>
    </Grid>
</Window>
